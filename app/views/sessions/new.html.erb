<div class = "projects_head"><h1>Login</h1></div>
<div class = "spacer">
  <% if flash[:notice] %>
    <div class="alert alert-danger">
      <div class="message" id="notice">
        <%= flash[:notice] %>
      </div>
    </div>
  <% elsif flash[:warning] %>
    <div class="alert alert-danger">
      <div class="flashMessage" id="warning">
        <%= flash[:warning] %>
      </div>
    </div>
  <% end %>
</div>
<div class = "full3">
  <h4>Login To Your Account</h4>
<%= form_tag sessions_path, :class => 'form' do %>
    <div class="secondary btn pretty"><%= label :session, :name, 'Name', :class => 'col-form-label' %></div>
    <div class="secondary btn pretty"><%= text_field :session, 'name', :class => 'form-control' %></div><br><br>
    <div class="secondary btn pretty"><%= label :session, :password_digest, 'Password', :class => 'col-form-label'  %></div>
    <div class="secondary btn pretty"><%= password_field :session, 'password_digest', :class => 'form-control' %></div><br><br>
    <%= submit_tag 'Login to my account', :id => 'login_submit' , :class => 'btn btn-primary' %><br><br>
    <%= link_to 'Sign-up for an account', new_user_path, :id => 'signup', :class => 'btn btn-primary'%>
<% end %>
</div>
