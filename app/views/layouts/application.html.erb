<!DOCTYPE html>
<html>
<head>
  <title>Evan Price</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<h1><a class="header" href="#index"> Evan Price</a></h1>
<div class = 'grid-container'>
  <header>
    <div class="topnav">
      <%if current_page?(root_path) %>
        <%root = "active" %>
      <%elsif current_page?(descriptions_education_path)%>
        <%edu = "active" %>
      <%elsif current_page?(descriptions_experience_path)%>
        <%exp = "active" %>
      <%elsif current_page?(descriptions_skills_path)%>
        <%skills = "active" %>
      <%elsif current_page?(descriptions_github_path)%>
        <%git = "active" %>
      <%elsif current_page?(descriptions_contactme_path)%>
        <%cme = "active" %>
      <%end %>
      <%=link_to "Home", root_path, class: root %>
      <%=link_to "Education", descriptions_education_path, :id => 'Education', class: edu%>
      <%=link_to "Experience", descriptions_experience_path, :id => 'Experience', class: exp%>
      <%=link_to "Skills", descriptions_skills_path, :id => "Skills", class: skills%>
      <%=link_to "Github", descriptions_github_path, :id => 'Github', class: git%>
      <%=link_to "Contact Me", descriptions_contactme_path, :id => 'Contact', class: cme %>



    </div>
  </header>
  <div class = "spacer1"></div>
  <body>
<%= yield %>

</body>
  <div class = "img">
    <%= image_tag("final.jpg", :alt => "Evan Price IMG", :height => 325, :width => 240)%>
  </div>
</div>
</html>
